{
  "name": "atlas-ui",
  "version": "0.5.1",
  "description": "A Vue.js 2.0 universal responsive UI component library",
  "main": "dist/atlas-ui.js",
  "module": "dist/atlas-ui.es.js",
  "unpkg": "dist/atlas-ui.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "start-storybook -p 9001 -c .storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "build": "rm -rf ./dist && bili",
    "tdd": "jest --watch",
    "test": "jest",
    "test:newsnapshot": "npm run test -- -u",
    "lint": "eslint --ext .vue --ext .js src/",
    "lint:fix": "npm run lint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cotabox/atlas.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cotabox/atlas/issues"
  },
  "homepage": "https://github.com/Cotabox/atlas#readme",
  "devDependencies": {
    "@storybook/addon-storysource": "^3.4.8",
    "@storybook/storybook-deployer": "^2.3.0",
    "@storybook/vue": "^3.4.8",
    "@vue/test-utils": "^1.0.0-beta.24",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-preset-env": "^1.7.0",
    "bili": "^3.1.2",
    "css-loader": "^1.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-postcss": "^3.0.3",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-vue": "^4.7.1",
    "file-loader": "^1.1.11",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.2",
    "jest-serializer-vue": "^2.0.2",
    "rollup-plugin-vue": "^3.0.0",
    "vue-jest": "^2.6.0",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.16"
  },
  "dependencies": {
    "atlas-style": "^0.1.0",
    "vue": "^2.5.16"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "testMatch": [
      "<rootDir>/(src/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  }
}
